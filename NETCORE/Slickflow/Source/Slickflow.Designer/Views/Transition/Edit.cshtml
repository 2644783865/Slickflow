@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Transition Property</title>
</head>
<body>
    <!-- Modal -->
    <div class="modal-body">
        <div id="divTransitionProperty" style="height:160px;">
            <p>
                <span class="a_tit lang" as="description"></span>
                <span><input type="text" id="txtDescription" class="form-control" style="width:340px;" /></span>
            </p>
            <p>
                <span class="a_tit lang" as="recievertype"></span>
                <select id="ddlReceiverType" class="form-control" style="width:340px;">
                    <option value="default" class="lang" as="optiondefault"></option>
                    <option value="Superior" class="lang" as="superior"></option>
                    <option value="Compeer" class="lang" as="compeer"></option>
                    <option value="Subordinate" class="lang" as="subordinate"></option>
                </select>
            </p>
            <p>
                <span class="a_tit lang" as="conditionexpression"></span>
                <span><textarea id="txtCondition" class="bcxj form-control" style="height:60px;"></textarea></span>
            </p>
        </div>
        <div id="divSplitOptions" style="display:none;">
            <p>
                <span class="a_tit lang" as="priority"></span>
                <span><input type="text" id="txtPriority" class="form-control" style="width:340px;" placeholder="请输入数字，-1-表示最高优先级，0,1,2,3 依次优先级降低..." /></span>
            </p>
        </div>
        <div id="divJoinOptions" style="display:none;">
            <p>
                <span class="a_tit lang" as="mergeoptions"></span>
                <span><input type="checkbox" id="chkForced" style="width:30px;" class="lang" as="forcedmergebranch"/></span>
            </p>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary lang" as="sure" data-dismiss="modal" onclick="transitionproperty.save();"></button>
        <button class="btn lang" as="cancel" data-dismiss="modal" aria-hidden="true"></button>
    </div>

    <script type="text/javascript">
        $(function () {
            kresource.localize();
            transitionproperty.load();
        });
    </script>

</body>
</html>