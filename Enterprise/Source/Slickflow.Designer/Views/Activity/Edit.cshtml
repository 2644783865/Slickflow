
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>活动属性编辑</title>
    <style type="text/css">
        .parentRow {
            width: 500px;
            height: 16px;
            margin-right: 10px;
        }

        .childColumn {
            float: left;
            margin-right: 5px;
        }
    </style>

</head>
<body>
    <!-- Modal -->
    <div>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">活动属性</h3>
        </div>
        <div class="modal-body">
            <div class="row-fluid">
                <p>
                    <span class="a_tit">名称:</span>
                    <span><input type="text" id="txtActivityName" style="width:340px;" /></span>
                </p>
                <p>
                    <span class="a_tit">代码:</span>
                    <span><input type="text" id="txtActivityCode" style="width:340px;" /></span>
                </p>
                <p>
                    <span class="a_tit">描述:</span>
                    <span><input type="text" id="txtDescription" style="width:340px;" /></span>
                </p>
                <div id="divMultipleInstanceContent">
                    <p>
                        <div class="parentRow">
                            <div class="childColumn">
                                <span class="a_tit">会加签类型:</span>

                                <select id="ddlComplexType" style="width:80px;">
                                    <option value="default" disabled selected>--请选择--</option>
                                    <option value="SignTogether">会签</option>
                                    <option value="SignForward">加签</option>
                                </select>
                            </div>
                            <div class="childColumn">
                                <span class="a_tit">串并行选择:</span>

                                <select id="ddlMergeType" style="width:80px;">
                                    <option value="default" disabled selected>--请选择--</option>
                                    <option value="Sequence">串行</option>
                                    <option value="Parallel">并行</option>
                                </select>
                            </div>
                        </div>
                    </p>
                    <p>
                        <div class="parentRow">
                            <div class="childColumn">
                                <span class="a_tit">通过率类型:</span>

                                <select id="ddlCompareType" style="width:80px;">
                                    <option value="default" disabled selected>--请选择--</option>
                                    <option value="Count">个数</option>
                                    <option value="Percentage">百分比</option>
                                </select>
                            </div>

                            <div class="childColumn">
                                <span class="a_tit">通过率:</span>
                                <input type="text" id="txtCompleteOrder" style="width: 90px;" />
                            </div>
                        </div>
                    </p>
                </div>
            </div>
            <div class="row-fluid">
                <b class="icoBtn btnNew" onclick="activityproperty.addPerformer();"></b>
                <b class="icoBtn btnDel" onclick="activityproperty.delPerformer();"></b>
                <div id="myPerformerGrid" class="grid-container" style="width:100%;height:160px;"></div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="activityproperty.saveActivity();">确定</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            activityproperty.loadActivity();
        });
    </script>
</body>
</html>