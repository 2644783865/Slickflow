@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>角色列表</title>
</head>
<body>
    <!-- Modal -->
    <div>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">角色列表</h3>
        </div>
        <div class="modal-body">
            <div id="myRoleGrid" class="grid-container" style="width:100%;height:260px;"></div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="rolelist.sure();">确定</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            rolelist.getRoleList();
        })
    </script>
</body>
</html>